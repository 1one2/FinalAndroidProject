<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Authentication"
    android:background="@drawable/app_background">
    <TextView
        android:id="@+id/authenticationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"

        android:textSize="40sp"
        android:textColor="@color/white"
        android:fontFamily="@font/robotobolditalic"
        android:text="@string/enter_name"
        android:textAlignment="center"
        android:gravity="center_horizontal"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    />
    <TextView
        android:id="@+id/authenticationTextHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="15sp"
        android:textColor="@color/lightGray"
        android:fontFamily="@font/robotobolditalic"
        android:text="@string/enter_name_hint"
        android:gravity="end"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/authenticationText"
        />

    <EditText
        android:id="@+id/authenticationEditText"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@drawable/ranking_entry_background"

        android:layout_marginTop="20sp"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"

        android:ellipsize="start"
        android:singleLine="true"

        android:fontFamily="@font/robotoitalic"
        android:textSize="30sp"
        android:textAlignment="center"
        android:gravity="center"

        app:layout_constraintTop_toBottomOf="@id/authenticationTextHint"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <android.widget.Button
        android:id="@+id/loginButton"

        android:layout_width= "110sp"
        android:layout_height="50sp"
        android:background="@drawable/button_new_design"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:text="Login"
        android:textColor="@color/yellow"
        android:fontFamily="@font/robotoitalic"
        android:textSize="30sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"



        app:layout_constraintTop_toBottomOf="@id/authenticationEditText"
        />
</androidx.constraintlayout.widget.ConstraintLayout>